<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/productList.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
        integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/css/home.css">
</head>

<body>
    <%- include("./partials/header") %>
        <main>
            <section class="titulo-general">
                <h1>Objetos</h1>
                <h3>objetos de arte</h3>
            </section>


            <section class="nav-filtros">
                <select>
                    <option>Todos</option>
                    <option>Interiorismo</option>
                    <option>Moda</option>
                    <option>Pintura</option>
                    <option>Baile</option>
                    <option>Yoga</option>
                    <option>Montaña</option>
                </select>

            </section>


            <div class="container-grid">

                <section class="side-bar">

                    <div class="check-dificultad">
                        <h3>Valor</h3>
                        <div><input type="checkbox" name="dificultadcheck" value="principiante">Regular</input>
                            <i class="fa-solid fa-star"></i>
                            <span class="checkmark"></span>
                        </div>
                        <div><input type="checkbox" name="dificultadcheck" value="fácil">Importante</input>
                            <i class="fa-solid fa-star"></i><i class="fa-solid fa-star"></i>
                            <span class="checkmark"></span>
                        </div>
                        <div><input type="checkbox" name="dificultadcheck" value="intermedio">Muy importante</input>
                            <i class="fa-solid fa-star"></i><i class="fa-solid fa-star"></i><i
                                class="fa-solid fa-star"></i>
                            <span class="checkmark"></span>
                        </div>
                        <div><input type="checkbox" name="dificultadcheck" value="difícil">Excelente</input>
                            <i class="fa-solid fa-star"></i><i class="fa-solid fa-star"></i><i
                                class="fa-solid fa-star"></i><i class="fa-solid fa-star"></i>
                            <span class="checkmark"></span>
                        </div>
                        <div><input type="checkbox" name="dificultadcheck" value="avanzado">Imprescindible</input>
                            <i class="fa-solid fa-star"></i><i class="fa-solid fa-star"></i><i
                                class="fa-solid fa-star"></i><i class="fa-solid fa-star"></i><i
                                class="fa-solid fa-star"></i>
                            <span class="checkmark"></span>
                        </div>
                    </div>

                    <div class="check-edad">
                        <h3>Edad</h3>
                        <div><input type="checkbox" name="edadcheck" value="niños">Niña</input>
                            <span class="checkmark"></span>
                        </div>
                        <div><input type="checkbox" name="edadcheck" value="adolescentes">Adolescentes</input>
                            <span class="checkmark"></span>
                        </div>
                        <div><input type="checkbox" name="edadcheck" value="jóvenes">Joven</input>
                            <span class="checkmark"></span>
                        </div>
                        <div><input type="checkbox" name="edadcheck" value="adultos">Adulta</input>
                            <span class="checkmark"></span>
                        </div>
                    </div>

                </section>

                <section class="productos-display">

                    <section class="fitness">

                        <div class="titulo-fitness">
                            <h3>Todos los productos</h3>
                        </div>

                        <div class="actividades-container">
                            <% products.forEach(products => { %>
                    
                                <article class="actividad-ejemplo">

                                    <div class="foto">
                                        <div class="etiqueta-actividad">
                                            <p>
                                                <%= products.category %>
                                            </p>
                                        </div>
                                        <img src="/images/<%= products.img %>" alt="producto">
                                    </div>

                                    <div clas="info">
                                        <h3 class="texto-actividad bebas">
                                            <%= products.name %>
                                        </h3>
                                        <p class="texto-actividad">
                                            <%= products.name %>
                                        </p>
                                        <p class="texto-actividad">Valor</p>
                                        <div class="texto-actividad">
                                            <p class="texto-actividad">
                                                <%= products.value %>
                                            </p>
                                            <!-- <i class="fa-solid fa-star"></i><i class="fa-solid fa-star"></i><i
                                                class="fa-solid fa-star"></i><i class="fa-regular fa-star"></i></i><i
                                                class="fa-regular fa-star"></i> -->
                                        </div>

                                        <div class="seccion-texto">
                                            <p class="texto-actividad">Price</p>
                                            <h3>
                                                <%= products.price %>
                                            </h3>
                                        </div>

                                        <div>
                                            
                                              <a href="/product/<%= products.id %>/productDetail"><button>Ver Detalle del producto</button></a>
                                        </div>
                                    </div>

                                </article>
                                <% }) %>
                            

                        </div>

                    </section>

                
                </section>

            </div>

        </main>

</body>

</html>